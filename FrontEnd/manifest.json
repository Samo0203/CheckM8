{
  "manifest_version": 3,
  "name": "Lichess V10.0",
  "version": "1.5.0",
  "description": "Customize, colorize, and number your arrows on Lichess â€” with analysis.",

  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "offscreen"
  ],

  "host_permissions": [
    "https://lichess.org/*"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content/drawArrows.js"],
      "css": ["content/style.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "stockfish/stockfish.js",
        "offscreen.html",
        "offscreen.js",
        "assets/icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
