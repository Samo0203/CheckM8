{
  "manifest_version": 3,
  "name": "ChckM8 v10",
  "version": "1.6.0",
  "description": "Customize, colorize, number and analyze arrows on Lichess â€” with persistent boards",

  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "offscreen"
  ],

  "host_permissions": [
    "https://lichess.org/*"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content/drawArrows.js"],
      "css": ["content/style.css"]
    }
  ],

"web_accessible_resources": [
  {
    "resources": [
      "stockfish/stockfish.js",
      "stockfish/stockfish.wasm",
      "offscreen.html",
      "offscreen.js"
    ],
    "matches": ["<all_urls>"]
  }
]
}