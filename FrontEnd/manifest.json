{
  "manifest_version": 3,
  "name": "Checkm8",
  "version": "1.2.0",
  "description": "Customize, colorize, and number your arrows on Lichess â€” with user login & sync.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://lichess.org/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content/drawArrows.js"],
      "css": ["content/style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/*",
        "popup/*",
        "icons/*"
      ],
      "matches": ["https://lichess.org/*"]
    }
  ]
}
